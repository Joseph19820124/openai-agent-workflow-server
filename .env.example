# LLM Configuration (supports OpenAI, OpenRouter, or any OpenAI-compatible API)
LLM_API_KEY=your_api_key
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=openai/gpt-5.2-codex

# Examples:
# OpenRouter (recommended for code tasks): LLM_MODEL=openai/gpt-5.2-codex
# OpenRouter (general):                    LLM_MODEL=openai/gpt-5.2
# OpenAI direct:  LLM_BASE_URL=https://api.openai.com/v1  LLM_MODEL=gpt-5.2-codex
# Anthropic via OpenRouter: LLM_MODEL=anthropic/claude-sonnet-4

# GitHub Token (for GitHub API operations)
GITHUB_TOKEN=your_github_token

# GitHub Webhook Secret (for verifying webhook payloads)
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Server Port
PORT=3000
